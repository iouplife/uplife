<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/image"
        android:layout_width="125dp"
        android:layout_height="80dp"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue_default">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/blue_light">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textSize="20sp"
                android:text="Title" />

            <TextView
                android:id="@+id/tvParceiro"
                android:visibility="gone"
                android:layout_below="@id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:background="#F55"
                android:text="Parceiro" />

            <TextView
                android:id="@+id/tvDate"
                android:layout_below="@id/tvTitle"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:textSize="15sp"
                android:text="00/00" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:layout_marginLeft="10dp"
            android:textSize="16sp"
            android:text="Description"
            android:layout_marginBottom="3dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:background="#009928"
            android:text="Entrar"/>

    </LinearLayout>
</LinearLayout><!-- From: file:/C:/Users/Giovanne/AndroidStudioProjects/UpLife/app/src/main/res/layout/item_group.xml -->