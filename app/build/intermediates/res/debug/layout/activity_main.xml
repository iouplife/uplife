<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:ignore="MergeRootFrame">

    <LinearLayout
        android:id="@+id/sponsor"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="#f1f1f1"
        android:padding="2dp"
        android:layout_height="50dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Academia Raiz"
            android:textColor="#22F"
            android:textSize="16sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Se matricule hoje com a melhor promoção de mensalidade da história das academias do mundo inteiro"
            android:lineSpacingExtra="0.1dp"
            android:textColor="#55F"
            android:textSize="10sp" />
    </LinearLayout>

    <ScrollView
        android:layout_above="@id/sponsor"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/container"
            android:layout_height="match_parent"
            android:layout_width="match_parent"/>
    </ScrollView>
</RelativeLayout><!-- From: file:/C:/Users/Giovanne/AndroidStudioProjects/UpLife/app/src/main/res/layout/activity_main.xml -->